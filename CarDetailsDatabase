package CarDealer;

public class CarDetails {
    private final int RTO = 113990;
    private final int Ins = 47300;
    private final int Tcs = 11000;

    private final int Ad_Acc = 15000;
    int Total_Cost;

    public CarDetails(int Total_Cost) {
        this.Total_Cost = Total_Cost;
    }
    public int addrto() {
        return Total_Cost += RTO;
    }
    public int addins() {
        return Total_Cost += Ins;
    }
    public int addtcs() {
        return Total_Cost += Tcs;
    }
    public int addadiacc() {
        return Total_Cost += Ad_Acc;
    }
    public int discount(int discount) {
        return Total_Cost -= discount;
    }
    public int totalcost() {
        return Total_Cost;
    }
}
